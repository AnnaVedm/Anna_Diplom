<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="450" Height="340"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaTitleBarHeightHint="-1"
		ExtendClientAreaToDecorationsHint="False"
		SystemDecorations="None"
		Background="Transparent"
		x:CompileBindings="False"
		CornerRadius="40"
		WindowStartupLocation="CenterScreen"
		CanResize="False"
        x:Class="TyutyunnikovaAnna_Diplom.AddLoginForGoogle"
        Title="AddLoginForGoogle">
	<Border CornerRadius="30" Background="White" BorderBrush="{DynamicResource prColor}" BorderThickness="5">

		<StackPanel Spacing="20" Orientation="Vertical" HorizontalAlignment="Center">
			<Panel HorizontalAlignment="Stretch">
				<StackPanel HorizontalAlignment="Center">
					<TextBlock Margin="0 50 0 0" HorizontalAlignment="Center" Text="Придумайте логин" FontSize="20" FontWeight="SemiBold" Foreground="rgba(0,0,0,0.8)"/>
				</StackPanel>
				<StackPanel HorizontalAlignment="Right">
					<Button Content="X" CornerRadius="5" Foreground="White"  Click="BackButton_Click"  Background="#47A76A" HorizontalAlignment="Right" Margin="0 15 20 0"/>
				</StackPanel>
			</Panel>
			<TextBlock Margin="0 10 0 0" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="14" FontWeight="SemiBold" Foreground="rgba(0,0,0,0.8)" Text="Осталось совсем чуть-чуть. Перед входом в систему, пожалуйста, придумайте login!"/>
			<TextBox Watermark="Логин" Name="LoginTextBox"/>
			<StackPanel Orientation="Horizontal"></StackPanel>
			<Button Content="Принять" Click="ConfirmButton_Click" Margin="0 -25 0 0 " Classes="submitBtn"   HorizontalAlignment="Center"/>
		</StackPanel>
	</Border>
</Window>
